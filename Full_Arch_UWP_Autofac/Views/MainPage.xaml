<Page
    x:Class="Full_Arch_UWP_Autofac.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Full_Arch_UWP_Autofac.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBlock Text="WriteToDebugLine Page "
                       />
            <Button x:Name="ButtonDoDebug"
                    Content="Write Text to debug window:"
                    Command="{Binding ButtonClickCommand}"
                    CommandParameter="{Binding ElementName=ButtonDoDebug}"
                    Margin="10,10,0,0"
                    >
            </Button>
            <TextBox Text="{Binding TextBoxText,Mode=TwoWay}"
                     Margin="10"
                     PlaceholderText="write someting 'ere for da system debug read..."/>

        </StackPanel>

    </Grid>
</Page>
